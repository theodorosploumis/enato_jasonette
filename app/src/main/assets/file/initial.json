{
  "$jason": {
    "head": {
      "title": "9nth Primary School of Serres"
    },
    "body": {
      "style": {
        "border": "none"
      },
      "header": {
        "title": "9o Δημ. Σχολείο Σερρών",
        "style": {
          "color": "#ffffff",
          "background": "#000000"
        }
      },
      "sections": [{
        "items": [
            {
              "type": "image",
              "url": "https://www.enato.edu.gr/themes/getta/logo.png",
              "style": {
                "width": "100%",
                "padding": "20",
                "align": "center"
              }
            }
            ,{
              "type": "horizontal",
              "style": {
                "align": "bottom",
                "background": "#dddddd",
                "padding": "10"
              },
              "components": [
                {
                  "type": "button",
                  "url": "https://raw.githubusercontent.com/theodorosploumis/enato_jasonette/master/app/src/main/assets/images/pages_tab.png",
                  "style": {
                    "width": "200"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://raw.githubusercontent.com/theodorosploumis/enato_jasonette/master/app/src/main/assets/file/pages_list.json",
                      "transition": "modal"
                    }
                  }
                },
                {
                  "type": "button",
                  "url": "https://raw.githubusercontent.com/theodorosploumis/enato_jasonette/master/app/src/main/assets/images/news_tab.png",
                  "style": {
                    "width": "200"
                  },
                  "action": {
                    "type": "$href",
                    "options": {
                      "url": "https://raw.githubusercontent.com/theodorosploumis/enato_jasonette/master/app/src/main/assets/file/news_list.json",
                      "transition": "modal"
                    }
                  }
                }
              ]
            }
          ]
      }]
    }
  }
}